<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".broadcast_test.BroadcastActivity">

        <Button
            android:id="@+id/button_to_register_code_broadcast_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RegisterCodeBroadcastReceiver"
            android:textAllCaps="false"
            android:onClick="click"
            app:layout_constraintBottom_toTopOf="@+id/button_send_manifest_broadcast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_send_manifest_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SendManifestBroadcast"
            android:textAllCaps="false"
            android:onClick="click"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_send_code_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SendCodeBroadcast"
            android:textAllCaps="false"
            android:onClick="click"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_send_manifest_broadcast" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>